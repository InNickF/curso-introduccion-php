{% extends "layout.twig" %}

{% block content %}
    <h1>Add Project</h1>
    {% if saved != null %}
		<div class="alert alert-primary">
			{{ getMessage }}
		</div>
	{% endif %}
	{% if error != null %}
		<div class="alert alert-danger">
			{{ getMessage }}
		</div>
	{% endif %}
    <form action="/phpbasics/curso/projects/add" method="post">
    <label>
        Title
    </label><br>
    <input name="title" type="text"><br>
    <label>
        Description
    </label><br>
    <input name="description" type="text"><br>
    <button type="submit">Send</button>
    </form>

{% endblock %}

